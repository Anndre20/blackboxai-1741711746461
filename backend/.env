# Application
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/dareon

# Authentication
JWT_SECRET=dev-jwt-secret-key-change-in-production-9d8f3b4a2c1e
JWT_EXPIRES_IN=24h

# Email Configuration (using ethereal for development)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal-test@ethereal.email
SMTP_PASS=ethereal-password

# External Services
# Using test keys for development
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Microsoft Graph API (placeholder values for development)
MS_GRAPH_CLIENT_ID=dev-ms-client-id
MS_GRAPH_CLIENT_SECRET=dev-ms-client-secret
MS_GRAPH_TENANT_ID=dev-ms-tenant-id

# Google API (placeholder values for development)
GOOGLE_CLIENT_ID=dev-google-client-id
GOOGLE_CLIENT_SECRET=dev-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# File Storage
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_FILE_ENCRYPTION=false

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# API Limits
MAX_PAYLOAD_SIZE=10mb
MAX_FILE_UPLOADS=5
FILE_UPLOAD_PATH=uploads/

# Development Specific
ENABLE_DETAILED_LOGGING=true
SKIP_AUTH_FOR_DEVELOPMENT=false
